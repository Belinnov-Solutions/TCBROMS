<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd">
  <!--autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">-->

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <targets>
    <target name="database"
                 xsi:type="Database"
                 dbProvider="System.Data.SqlClient"
                dbDatabase="ElmahLogs"
              dbUserName="sa"
              dbPassword="yellowbus"
              dbHost="192.168.1.9"
                commandText ="INSERT INTO Logs ([level], [callSite], [type],[stackTrace],[innerException],[additionalInfo],[loggedondate]) VALUES (@level,@callSite,@type,@stackTrace, @innerException,@additionalInfo,@currentDate);">
      <parameter name="@level" layout="${level}" />
      <parameter name="@callSite" layout="${callsite}" />
      <parameter name="@type" layout="${exception:format=type}" />
      <parameter name="@message" layout="${exception:format=message}" />
      <parameter name="@stackTrace" layout="${exception:format=stackTrace}" />
      <parameter name="@innerException"
                  layout="${exception:format=:innerFormat=ShortType,Message,Method:MaxInnerExceptionLevel=5:InnerExceptionSeparator=}" />
      <parameter name="@additionalInfo" layout="${message}" />
      <parameter name="@currentDate" layout="${date}" />
    </target>

  </targets>

  <rules>
    <logger levels="Error,Warn,Fatal,Info" name="databaseLogger" writeTo="database"/>
  </rules>
</nlog>
